<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Horizontal Layout for Headings -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- TextView for Category Heading -->
        <TextView
            android:id="@+id/textViewCategoryHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Category"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <!-- TextView for Total Hours Heading -->
        <TextView
            android:id="@+id/textViewTotalHoursHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Hours"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="end"/>
    </LinearLayout>

    <!-- Horizontal Layout for Category and Total Hours -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- TextView for Category -->
        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp" />

        <!-- TextView for Total Hours -->
        <TextView
            android:id="@+id/textViewTotalHours"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 hours"
            android:textSize="16sp"
            android:gravity="end"/>
    </LinearLayout>
</LinearLayout>
